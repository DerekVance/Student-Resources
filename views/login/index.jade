extends ../layout

block content
  h1.maintitle= title
  include ../includes/errors
  form(action='/' method='post')
    div
      label(for='email' style={color: '#22B1F0'}) Email
        p
          input#email(type='email' name='email')
      label(for='password' style={color: '#22B1F0'}) Password
        p
          input#password(type='password' name='password')
    div
      input(type='submit' value='Login')
    div
      p
         a.button(href='login/new') Create an Account
