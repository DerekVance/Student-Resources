extends ../layout

block content
  h1.maintitle= title
  if errors
    for error in errors
      p.error=error
  form(action="" method='post')
    div
      label(for='email' style={color: '#22B1F0'}) Email
      p
      input#email(type='text' name='email')
      p
      label(for='username' style={color: '#22B1F0'}) Username: 
      p
      input#username(type='text' name='username')
      p
      label(for='password' style={color: '#22B1F0'}) Password: 
      p
      input#password(type='password' name='password')
      p
      label(for='password-confirm' style={color: '#22B1F0'}) Password Confirmation: 
      p
      input#password-confirm(type='password' name='password_confirm')
    div
      p
      input(type='submit' value='Create Account')
      p
      a.button(href='/') Back to Login
        
